@model List<CBA.Web.Models.DestinacaoBemModel>
@{
    ViewBag.Title = "Cadastro de Destinações de Bens";
    ViewBag.Modal = "Destinações de Bens";
}

<div id="cadastro">
    <section class="text-center" id="cadastro_cabecalho">
        <h1>@ViewBag.Title</h1>
    </section>
    <section id="cadastro_conteudo">
        <div class="row" id="grid_cabecalho">
            <a id="btn_incluir" class="btn btn-success" role="button"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Incluir</a>
        </div>
        <br />
        <div class="row">
            <div class="table-responsive">
                <table id="grid_cadastro" class="table table-bordered table-hover" data-toggle="table">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Ativo ?</th>
                            <th>Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr data-id="@item.Id">
                                <td>@item.Nome</td>
                                <td>@{var ativo = (item.Ativo ? "Sim" : "Não");}@ativo</td>
                                <td>
                                    <a id="btn_alterar" class="btn btn-primary" role="button"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Alterar</a>
                                    <a id="btn_excluir" class="btn btn-danger" role="button"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Excluir</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>

<div id="modal_cadastro" class="collapse" role="dialog">
    <fieldset>
        <div class="">
            <div class="form-group">
                @Html.Label("txt_nome", "Nome", new { @class = "col-md-3 control-label" })
                <div class="">
                    @Html.TextBox("txt_nome", null, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("cbx_ativo", "Ativo", new { @class = "col-md-3 control-label" })
                <div class="">
                    @Html.CheckBox("cbx_ativo")
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="modal-footer">
                <a id="btn_sair" class="btn btn-default" aria-hidden="true" role="button" data-dismiss="modal"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Sair</a>
                <a id="btn_confirmar" class="btn btn-primary" aria-hidden="true" role="button"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Salvar</a>
            </div>
        </div>
    </fieldset>
</div>

@section Scripts{
    <script>
        function abrir_modal(dados) {

            $('#txt_nome').val(dados.Nome);
            $('#cbx_ativo').prop('checked', dados.Ativo);

            var modalCadastro = $('#modal_cadastro');

            bootbox.dialog({
                    title: '@ViewBag.Modal',
                    message: modalCadastro
                })
                .on('shown.bs.modal',
                    function() {
                        modalCadastro.show(0,
                            function() {
                                $('#txt_nome').focus();
                            });
                    })
                .on('hidden.bs.modal',
                    function() {
                        modalCadastro.hide().appendTo('body');
                    });
        }

        $(document).on('click',
                '#btn_incluir',
                function() {
                    abrir_modal({ Id: 0, Nome: '', Ativo: true });
                })
            .on('click',
                '#btn_alterar',
                function() {
                    var btn = $(this),
                        id = btn.closest('tr').attr('data-id'),
                        url = '@Url.Action("RecuperarDestinacaoBem", "Cadastro")',
                        param = { 'id': id };

                    $.post(url,
                        param,
                        function(response) {
                            if (response) {
                                abrir_modal(response);
                            }
                        });
                }).on('click',
                '#btn_excluir',
                function() {
                    alert('3');
                });
    </script>
}