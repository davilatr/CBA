@model List<CBA.Web.Models.UsuarioModel>
@{
    Layout = "~/Views/Shared/_Cadastro.cshtml";
    ViewBag.Title = "Usuários do Estelar";
    ViewBag.Modal = "Usuários do Estelar";
}

@section Styles{
    <link href="~/Content/bootstrap-select.min.css" rel="stylesheet" />
}

@section TituloGrid {
    <th scope="col">Nome</th>
    <th scope="col">Login</th>
    <th scope="col">Ação</th>
}

@section ConteudoGrid{
    @foreach (var item in Model)
    {
        <tr data-id="@item.Id">
            <td nome="@item.Nome">@item.Nome</td>
            <td nome="@item.Login">@item.Login</td>
            <td>
                <a id="btn_alterar" class="btn btn-primary" role="button"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Alterar</a>
                <a id="btn_excluir" class="btn btn-danger" role="button"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Excluir</a>
            </td>
        </tr>
    }
}

@section ModalCadastro{
    <div class="">
        <div class="form-group">
            @Html.Label("txt_nome", "Nome", new { @class = "col-md-3 control-label" })
            <div class="">
                @Html.TextBox("txt_nome", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("txt_login", "Login", new { @class = "col-md-3 control-label" })
            <div class="">
                @Html.TextBox("txt_login", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("txt_senha", "Senha", new { @class = "col-md-3 control-label" })
            <div class="">
                @Html.TextBox("txt_senha", null, new { @class = "form-control", type = "password" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("txt_perfil", "Perfil", new { @class = "col-md-3 control-label" })
            <div class="">
                @Html.DropDownList("ddl_perfil", new SelectList(ViewBag.ListaPerfil, "Id", "Nome"), new { @class = "form-control" })
            </div>
        </div>
    </div>
}


@section Scripts{

    <script src="~/Scripts/bootstrap-select.min.js"></script>
    <script>
        var tituloModal = '@ViewBag.Modal',
            url_alterar = '@Url.Action("ListaUsuario", "Usuario")',
            url_excluir = '@Url.Action("ExcluirUsuario", "Usuario")',
            url_salvar = '@Url.Action("SalvarUsuario", "Usuario")',
            url_paginacao_click = '@Url.Action("PaginacaoUsuario", "Usuario")',
            url_tam_paginacao_change = '@Url.Action("PaginacaoUsuario", "Usuario")',
            _senhaPadrao = '@ViewBag.SenhaPadrao';
    </script>
    <script src="~/Scripts/Cadastro/Usuario.js"></script>

}